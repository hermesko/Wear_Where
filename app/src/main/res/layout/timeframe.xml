<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Date"
        android:text="Chance of Below Freezing: "
        android:id="@+id/BelowFreezingText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/BelowFreezingText"
        android:layout_below="@id/Date"
        android:id="@+id/BelowFreezingPercent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BelowFreezingText"
        android:text="Chance of Cloudy: "
        android:id="@+id/CloudyText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/CloudyText"
        android:layout_below="@id/BelowFreezingText"
        android:id="@+id/CloudyPercent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CloudyText"
        android:text="Chance of Fog: "
        android:id="@+id/FogText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/FogText"
        android:layout_below="@id/CloudyText"
        android:id="@+id/FogPercent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FogText"
        android:text="Chance of Snow: "
        android:id="@+id/SnowText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/SnowText"
        android:layout_below="@id/FogText"
        android:id="@+id/SnowPercent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SnowText"
        android:text="Chance of Rain: "
        android:id="@+id/RainText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/RainText"
        android:layout_below="@id/SnowText"
        android:id="@+id/RainPercent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RainText"
        android:text="Chance of Windy: "
        android:id="@+id/WindyText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/WindyText"
        android:layout_below="@id/RainText"
        android:id="@+id/WindyPercent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/WindyText"
        android:text="Chance of Humid: "
        android:id="@+id/HumidText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/HumidText"
        android:layout_below="@id/WindyText"
        android:id="@+id/HumidPercent" />
</RelativeLayout>